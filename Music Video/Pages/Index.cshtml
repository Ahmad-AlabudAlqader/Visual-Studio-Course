
@page
@model IndexModel
@{
    ViewData["Title"] = "My Music Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #1e1e2f;
            color: #fff;
            text-align: center;
            padding: 50px;
        }

        h1 {
            font-size: 3em;
            margin-bottom: 20px;
            animation: colorCycle 4s infinite;
        }

        iframe {
            border: none;
            width: 560px;
            height: 315px;
            box-shadow: 0 0 20px #ff4081;
        }

        @@keyframes colorCycle {
            0% { color: #ff4081; transform: scale(1); }
            25% { color: #40c4ff; transform: scale(1.1); }
            50% { color: #69f0ae; transform: scale(1); }
            75% { color: #ffd740; transform: scale(1.1); }
            100% { color: #ff4081; transform: scale(1); }
        }
    </style>
</head>
<body>
    <h1 id="animatedTitle">My Favorite Song</h1>

    <!-- Replace the YouTube video URL with your favorite song -->
    <iframe width="560" height="315" src="https://www.youtube.com/embed/suAR1PYFNYA?si=YRXuetBdA0Gu4ks-" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>

    <script>
        // Optional JS animation: bounce effect using JS + CSS class toggle
        const title = document.getElementById("animatedTitle");

        function bounceEffect() {
            title.classList.add("bounce");
            setTimeout(() => title.classList.remove("bounce"), 1000);
        }

        setInterval(bounceEffect, 4000);
    </script>

    <style>
        /* Additional JS-based bounce effect */
        .bounce {
            animation: bounce 1s;
        }

        @@keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-20px); }
        }
    </style>
</body>
</html>
